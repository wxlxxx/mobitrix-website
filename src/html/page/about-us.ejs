        <div class="py-5 bg-gray text-center">
          <div class="container">
            <h1 class="mb-4">Contact Us</h1>
            <p class="mb-5">You are welcome to contact us and send your voices.</p>
            <a href="/contact-us/"><img src="<%= process.env.IMAGE_PATH %>/about-tu9.png" alt=""></a>
          </div>
        </div>
      </section>
    </main>
    <%= require('html-loader!../common/footer.ejs') %>
